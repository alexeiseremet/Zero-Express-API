extends index.pug

block content
  form(class="uk-form-stacked uk-width-large" action="/register" method="post")
    fieldset(class="uk-fieldset")
      legend(class="uk-legend") Register
      div(class="uk-margin")
        input(class="uk-input" type="email" name="email" placeholder="Email" required)/
      div(class="uk-margin")
          input(class="uk-input" type="password" name="password" placeholder="Password" required)/
      div(class="uk-margin")
        input(class="uk-input" type="text" name="name" placeholder="Name")/
      div(class="uk-margin")
        input(class="uk-input" type="text" name="role" placeholder="Role")/
      div(class="uk-margin")
        button(class="uk-button uk-button-primary" type="submit") Send

  if err
    p(class="uk-text-danger")= err.message
